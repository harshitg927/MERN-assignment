# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/task-manager

# Firebase Configuration
FIREBASE_PROJECT_ID=task-manager-app
# For local development, leave FIREBASE_SERVICE_ACCOUNT empty to use application default credentials
# For production, set this to your Firebase service account JSON (stringified)
# FIREBASE_SERVICE_ACCOUNT=

# JWT Configuration (optional, for additional security)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d

# Logging
LOG_LEVEL=debug